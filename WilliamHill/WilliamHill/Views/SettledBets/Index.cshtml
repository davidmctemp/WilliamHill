@model List<WilliamHill.Service.Risk.UnSettled.SettledRisk>
@{
    ViewBag.Title = "Settled Bets Risk Analysis";
}
<section class="success" id="about">
    <div class="container">
        <h2>Settled Bets</h2>
        <p>Customers who have won more than 60% of their bets</p>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Customer ID</th>
                    <th>Concern</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.CustomerId</td>
                        <td>@customer.Concern</td>
                    </tr>               
                }
            </tbody>
        </table>
    </div>
</section>

